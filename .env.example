# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# Server Port
PORT=5000

# MongoDB Connection String (get from MongoDB Atlas)
DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/healthhub?retryWrites=true&w=majority

# Google Gemini API Key (get from Google Cloud Console)
API_KEY=your-google-gemini-api-key-here

# Cloudinary Credentials (get from Cloudinary dashboard)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Service Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=YourAppName <your-email@gmail.com>

# SendGrid (alternative to Gmail - optional)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Node Environment
NODE_ENV=development

# Email Logo URL (upload to Cloudinary/ImgBB and paste URL)
EMAIL_LOGO_URL=https://your-image-hosting-url.com/logo.png

# Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection
DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/healthhub?retryWrites=true&w=majority

# Server Port (for local development)
PORT=5000

# Email Configuration (for sending OTPs and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Healthhub <your-email@gmail.com>

# Node Environment
NODE_ENV=development

# Email Logo URL (upload your logo and paste the URL here)
EMAIL_LOGO_URL=https://res.cloudinary.com/dxt2rdkub/image/upload/healthhub-logo_mjsytt.jpg
